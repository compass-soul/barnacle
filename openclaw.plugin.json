{
  "id": "barnacle",
  "name": "Barnacle",
  "description": "Behavioral accountability for AI agents. Tracks hypotheses, verifies evidence against reality, catches self-deception. Pairs with Beads for task management.",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "projectsDir": {
        "type": "string",
        "description": "Directory containing project JSON files"
      },
      "auditIntervalMinutes": {
        "type": "number",
        "description": "How often the auditor runs (minutes)",
        "default": 30
      },
      "reportChannel": {
        "type": "string",
        "description": "Channel to send audit reports (telegram, discord, etc)"
      },
      "reportTarget": {
        "type": "string",
        "description": "Target chat/user ID for reports"
      }
    }
  },
  "uiHints": {
    "projectsDir": { "label": "Projects Directory", "placeholder": "~/.openclaw/planner/projects" },
    "auditIntervalMinutes": { "label": "Audit Interval (minutes)" },
    "reportChannel": { "label": "Report Channel" },
    "reportTarget": { "label": "Report Target ID" }
  }
}
